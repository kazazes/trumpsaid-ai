{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  }
}
